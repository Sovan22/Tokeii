            android:textColor="@color/white" />

        <TextView
            android:id="@+id/videoView_quality"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:text="1080p"
            android:gravity="center"
            android:textColor="@color/white"

             />

    </LinearLayout>

